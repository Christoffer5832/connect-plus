<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/setting_privacy">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="send_speaker_data"
            android:summary="@string/settings_send_speaker_data_summary"
            android:title="@string/settings_send_speaker_data_title" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="send_usage_data"
            android:summary="@string/settings_send_app_data_summary"
            android:title="@string/settings_send_app_data_title" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_developers">
        <Preference
            android:summary="@string/settings_main_developer_summary"
            android:title="@string/settings_main_developer_title" />

        <Preference
            android:summary="@string/settings_testers_summary"
            android:title="@string/settings_testers_title" />
    </PreferenceCategory>


</PreferenceScreen>